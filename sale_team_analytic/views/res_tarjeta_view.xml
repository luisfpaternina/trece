<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_tarjeta_view_form" model="ir.ui.view">
        <field name="name">res.tarjeta.view.form</field>
        <field name="model">res.tarjeta</field>
        <field name="arch" type="xml">
            <form string="Credit Card">
                <sheet>
                    <group name="body">
                        <group>
                            <field name="name"/>
                            <field name="shopin" />
                            <field name="codglamit" />
                        </group>
                        <group>
                            <field name="code"/>
                            <field name="type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_tarjeta_action" model="ir.actions.act_window">
        <field name="name">Action Card</field>
        <field name="res_model">res.tarjeta</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="promotion_menu"
        name="Promotion"
        parent="account.menu_finance_configuration"
        groups="account.group_account_manager"
        sequence="26"/>
        
    <menuitem
        id="tarjeta_menu"
        name="Cards"
        action="res_tarjeta_action"
        parent="sale_team_analytic.promotion_menu"/>

</odoo>
