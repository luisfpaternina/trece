<?xml version='1.0' encoding='UTF-8'?>
<odoo>
   <data>

    <record id="view_wzd_impuestos_x_periodo_form" model="ir.ui.view">
         <field name="name">view_wzd_impuestos_x_periodo_form</field>
         <field name="model">nybble.wzd_impuestos_x_periodo</field>
         <field name="arch" type="xml">
            <form>
		        <header>
			        <button name="generar_archivo" string="Generar Archivo" type="object" />
		        </header>
		        <sheet>
			        <group>
				        <field name="name" />
				        <field name="fecha_desde" />
				        <field name="fecha_hasta"/>
				        <!--field name="impuestos" widget="many2many_tags"/-->
				        <!--field name="impuesto"/-->
				        <field name="tipo_txt"/>
			        </group>
			        <group string="Archivo y datos">
				        <field name="export_file" filename="export_filename"/>
				        <field name="export_filename" invisible="1" />
				        <field name="export_data" readonly="1"/>
			        </group>
        		</sheet>
            </form>
         </field>
    </record>
    <record id="view_wzd_impuestos_x_periodo_tree" model="ir.ui.view">
         <field name="name">view_wzd_impuestos_x_periodo_tree</field>
         <field name="model">nybble.wzd_impuestos_x_periodo</field>
         <field name="arch" type="xml">
            <tree>
		        <field name="name" />
		        <field name="fecha_desde"/>
		        <field name="fecha_hasta"/>
		        <!--field name="impuestos" widget="many2many_tags"/-->
		        <!--field name="impuesto"/-->
		        <field name="tipo_txt"/>
            </tree>
         </field>
    </record>

        <record id="action_impuestos_por_periodo" model="ir.actions.act_window">
            <field name="name">Impuestos por Periodo</field>
            <field name="res_model">nybble.wzd_impuestos_x_periodo</field>
            <field name="view_mode">tree,form</field>
            <!--field name="target">new</field-->
        </record>

        <menuitem id="menu_impuestos_por_periodo"
                  action="action_impuestos_por_periodo"
                  parent="account.account_reports_management_menu"
                  sequence="7"/>
       </data>
</odoo>

